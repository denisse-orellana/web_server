<div class="container mt-1 mb-5">
  <div class="bg-success-subtle rounded p-4 my-4">
    <h1>
      <i class="fa fa-cutlery" aria-hidden="true"></i>
      Restaurants
    </h1>
  </div>
  
  <div class="mb-4">
    <%= link_to raw('<i class="fa fa-plus-circle 2x" aria-hidden="true"></i> New Restaurant'), new_restaurant_path, remote: true, class: 'btn btn-primary btn-lg text-bold' %>
    <div id="form-restaurant"></div>
  </div>

  <div class="table-responsive">
    <table class="table">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Status</th>
          <th scope="col">Updated</th>
          <th scope="col">Actions</th>
          <th></th>
        </tr>
      </thead>
      <tbody
        id="restaurants-table"
        data-url="<%= restaurants_path %>"
      >
      </tbody>
    </table>
  </div>
</div>

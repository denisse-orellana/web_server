<div class="nested-fields">
  <div class="group-device-server">
    <div>
      <div class="form-group pb-2">
        <%= f.label :name, 'Device/Server Name' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group pb-3">
        <%= f.label :status, 'Status' %> <br>
        <%= f.input :status, as: :select, collection: DeviceServer.status_description_device_server, wrapper: false, label: false, include_blank: false, input_html: { class: 'form-control' } %>
      </div>
    </div>
    <div class="remove-device mb-3 text-end">
      <%= link_to_remove_association raw('<i class="fa fa-ban 2x" aria-hidden="true"></i> Device/Server'), f, class: 'btn btn-danger text-bold' %>
    </div>
  </div>
</div>
